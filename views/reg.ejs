<%- include header%>
<script src="/javascripts/validate.js"></script>
<script src="/javascripts/reg.js"></script>
<div class="container clearfix small-container">
		<form action="/reg" class="form-horizontal form-small pull-left" method="POST" id="reg_form">
			<div class="form-group">
				<label for="inputAccount" class="col-md-4 control-label">用户名</label>
				<div class="col-md-8">
			      <input type="text" class="form-control required" id="inputName" placeholder="用户名" name="username">
			    </div>
			</div>
			<div class="form-group">
				<label for="inputPassword" class="col-md-4 control-label">密码</label>
				<div class="col-md-8">
			      <input type="password" class="form-control required" id="inputPsw" placeholder="密码" name="password">
			    </div>
			</div>
			<div class="form-group">
				<label for="inputPasswordAgain" class="col-md-4 control-label">确认密码</label>
				<div class="col-md-8">
			      <input type="password" class="form-control required" id="inputPswr" placeholder="确认密码" name="password-repeat">
			    </div>
			</div>
			<div class="form-group">
				<label for="inputEmail" class="col-md-4 control-label">电子邮箱</label>
				<div class="col-md-8">
			      <input type="text" class="form-control required" id="inputEmail" placeholder="电子邮箱" name="email">
			    </div>
			</div>
			<div class="form-group submit-btn-wrap">
				<label for="inputEmail" class="col-md-4 control-label"></label>
				<div class="col-md-8">
					<button type="submit" class="btn btn-primary pull-left center-block">注册</button>
					<% if(!!error){ %>
					<span class="has-error"><%= error%></span>
					<% } %>
				</div>
			</div>

		</form>
		<h2 class="pull-right">属于Huster的校园问答平台</h2>
	</div>
	
<%- include footer%>
