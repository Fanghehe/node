<%- include header%>

<div class="container clearfix small-container">
    <form action="/resetPsw" class="form-horizontal form-small pull-left" method="POST">
        <div class="form-group">
            <label for="inputAccount" class="col-md-2 control-label">用户名</label>
            <div class="col-md-7">
                <input type="text" class="form-control" id="inputAccount" placeholder="用户名" name="username">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAccount" class="col-md-2 control-label">邮箱</label>
            <div class="col-md-7">
                <input type="text" class="form-control" id="inputEmail" placeholder="注册时填写的邮箱" name="email">
            </div>
        </div>
        <div class="form-group submit-btn-wrap">
            <label for="inputAccount" class="col-md-2 control-label"></label>
            <div class="col-md-7">
                <button type="submit" class="btn btn-primary pull-left center-block">确认重置</button>
                <% if(!!error){ %>
                <span class="has-error"><%= error%></span>
                <% } %>
            </div>
        </div>
    </form>
    <h2 class="pull-right">属于Huster的校园问答平台</h2>
</div>

<%- include footer%>