<!-- 创建问题 Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">创建问题</h4>
      </div>
      <div class="modal-body">
      	<form action="/post" method="POST" id="question-form">
          <div class="form-group">
            <label for="recipient-name" class="control-label">标题:</label>
            <input type="text" class="form-control" id="recipient-name" name="title">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">问题描述:</label>
            <textarea class="form-control" id="message-text" name="ctx"></textarea>
          </div>
          <div class="form-group">
            <label for="picture" class="control-label">图片:&nbsp&nbsp&nbsp&nbsp<button type="button" class="btn btn-primary" onclick="$('#picture').click()">图片上传</button></label>
            <input type="file" class="btn btn-primary" id="picture">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" onclick = "$('#question-form').submit()">提问</button>
      </div>
    </div>
  </div>
</div>
</body>
</html>