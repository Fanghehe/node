<%- include admin-header%>
<div class="container clearfix admin-container">
<nav>管理员，你好！<a href="/admin/logout">登出</a></nav>
<ul class="nav nav-pills nav-stacked">
    <li role="presentation" <% if(view == 0){%>class="active"<%}%>><a href="/admin?c=user">用户管理</a></li>
    <li role="presentation" <% if(view == 1){%>class="active"<%}%>><a href="/admin?c=topic">问题管理</a></li>
    <li role="presentation" <% if(view == 2){%>class="active"<%}%>><a href="/admin?c=notice">发布公告</a></li>
</ul>
<div class="admin-form-wrap">
    <% if(view == 0){%>
    <form class="form-inline admin-username-wrap" id="admin-username-wrap">
        <div class="form-group" id="admin-search-wrap">
        </div>
        <button type="button" class="btn btn-primary" id="btn-upgrade" data-action="upgrade">升级权限</button>
        <button type="button" class="btn btn-danger" id="btn-demote" data-action="demote">降级权限</button>
    </form>
    <%}%>
    <% if(view == 1){%>
    <form class="form-inline admin-topic-wrap" id="admin-topic-wrap">
        <div class="form-group" id="admin-search-wrap">
        </div>
        <button type="button" class="btn btn-primary" id="btn-upgrade" data-action="doTop">帖子置顶</button>
        <button type="button" class="btn btn-danger" id="btn-demote" data-action="cancelTop">取消置顶</button>
        <button type="button" class="btn btn-danger" id="btn-demote" data-action="delTopic">删除帖子</button>
    </form>
    <%}%>
    <% if(view == 2){%>
    <form class="form-inline admin-notice-wrap" id="admin-notice-wrap" action="/admin/postNotice" method="POST">
    <textarea name="admin-notice" id="admin-notice"></textarea>
    <button type="submit" class="btn btn-primary">发布公告</button>
    </form>
    <%}%>
</div>
</div>
<%- include admin-footer%>