<%- include header%>

<div class="container clearfix small-container">
	<form action="/login" class="form-horizontal form-small pull-left" method="POST">
		<div class="form-group">
			<label for="inputAccount" class="col-md-2 control-label">用户名</label>
			<div class="col-md-7">
		      <input type="text" class="form-control" id="inputAccount" placeholder="用户名" name="username">
		    </div>
		    <a href="register.html" class="col-md-3">注册</a>
		</div>
		<div class="form-group">
			<label for="inputPassword" class="col-md-2 control-label">密码</label>
			<div class="col-md-7">
		      <input type="password" class="form-control" id="inputAccount" placeholder="密码" name="password">
		    </div>
		    <a href="##" class="col-md-3">忘记密码</a>
		</div>
		<div class="form-group">
			<label for="inputAccount" class="col-md-2 control-label"></label>
			<div class="col-md-7">
				<button type="submit" class="btn btn-primary pull-left center-block">登录</button>
				<% if(!!error){ %>
				<span class="has-error"><%= error%></span>
				<% } %>
			</div>
		</div>
	</form>
	<h2 class="pull-right">属于Huster的校园问答平台</h2>
</div>

<%- include footer%>